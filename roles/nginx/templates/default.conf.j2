server {
	listen 0.0.0.0:80 default_server;
	listen 0.0.0.0:443 default_server;

	access_log /var/log/nginx/default.access.log;
	error_log /var/log/nginx/default.error.log;

	location / {
		return 444;
	}

	# For nginx_exporter
	location /stub_status {
        stub_status on;
        access_log off;
        allow 127.0.0.1;
        deny all;
    }
}
