{{ ansible_managed | comment }}

global:
  scrape_interval:     {{ prometheus_scrape_interval }} # Set the scrape interval to every X seconds. Default is every 1 minute.
  evaluation_interval: {{ prometheus_evaluation_interval }} # Evaluate rules every X seconds. The default is every 1 minute.

# Alertmanager configuration
alerting:
  alertmanagers:
  - static_configs:
    - targets:
        - {{ alertmanager_host }}:{{ alertmanager_port }}

# Load rules once and periodically evaluate them according to the global 'evaluation_interval'.
rule_files:
{% for file in lookup('fileglob', 'files/*', wantlist=True) %}
  - "{{ file | basename }}"
{% endfor %}

# A scrape configuration containing exactly one endpoint to scrape:
# Here it's Prometheus itself.
scrape_configs:
  - job_name: 'prometheus'
    static_configs:
    - targets: ['localhost:9090']

{% for job in prometheus_jobs %}
  - job_name: '{{ job.name }}'
{% if job.scrape_interval is defined %}
    scrape_interval: {{ job.scrape_interval }}
{% endif %}
{% if job.scrape_timeout is defined %}
    scrape_timeout: {{ job.scrape_timeout }}
{% endif %}
    static_configs:
    - targets:
{% for host in groups[job.group] %}
      - '{{ host }}:{{ job.port }}'
{% endfor %}

{% endfor %}

