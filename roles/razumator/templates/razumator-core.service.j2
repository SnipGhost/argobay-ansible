[Unit]
Description=Razumator core
After=syslog.target

[Service]
SyslogIdentifier=razumator-core
SyslogFacility={{ razumator_log_facility }}
SyslogLevel={{ razumator_log_severity }}
User={{ userId }}
Group={{ groupId }}
Type=simple
Restart=always
WorkingDirectory=/
ExecStart={{ razumator_bindir }}/src/arm_razum
ExecReload=/bin/kill -HUP $MAINPID
ExecStop=/bin/kill -INT $MAINPID
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target
