{{ rsyslog_remote_log_dir }}/*.log {{ rsyslog_remote_log_dir }}/*/*.log {
    {{ rsyslog_log_period }}
    rotate {{ rsyslog_log_rotate }}
    size {{ rsyslog_log_size }}
    missingok
    notifempty
    delaycompress
    compress
    postrotate
        /usr/lib/rsyslog/rsyslog-rotate
    endscript
}
