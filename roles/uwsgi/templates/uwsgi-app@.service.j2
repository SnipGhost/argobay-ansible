[Unit]
Description=%i uWSGI app
After=syslog.target network.target haproxy.service
PartOf=uwsgi-apps.target
SyslogFacility=local0

[Service]
SyslogIdentifier=uwsgi-app@%i
SyslogFacility={{ uwsgi_log_facility }}
SyslogLevel={{ uwsgi_log_severity }}
Type=simple
Restart=always
StartLimitBurst=3
StartLimitIntervalSec=30
KillSignal=SIGINT
ExecStartPre=/bin/mkdir -p /run/uwsgi
ExecStartPre=/bin/chown -R uwsgi:uwsgi /run/uwsgi
ExecStart=/usr/bin/uwsgi \
	--ini /etc/uwsgi/apps-enabled/%i.ini \
	--pidfile /run/uwsgi/%i.pid
ExecReload=/bin/kill -HUP $MAINPID

[Install]
WantedBy=uwsgi-apps.target
